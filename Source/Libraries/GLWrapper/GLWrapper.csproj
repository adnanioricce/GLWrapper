<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>    
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Shaders\Default2DTexture\fragment.shader" />
    <None Remove="Resources\Shaders\Default2DTexture\vertex.shader" />
    <None Remove="Resources\Shaders\Default2D\fragment.shader" />
    <None Remove="Resources\Shaders\Default2D\vertex.shader" />
    <None Remove="Resources\Shaders\Default3D\fragment.shader" />
    <None Remove="Resources\Shaders\Default3D\vertex.shader" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Shaders\Default2DTexture\fragment.shader" />
    <EmbeddedResource Include="Resources\Shaders\Default2DTexture\vertex.shader" />
